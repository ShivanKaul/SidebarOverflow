{
    "manifest_version": 2,

    "name": "SidebarOverflow",
    "description": "Remove distracting sidebars from StackOverflow.",
    "version": "0.1.1",
    "homepage_url": "http://shivankaul.com",
    "icons": {
        "64": "icons/64.png",
        "32": "icons/32.png",
        "128": "icons/128.png"
    },
    "content_scripts": [{
        "matches": ["http://*.stackoverflow.com/*",
            "http://stackoverflow.com/*", "http://*.stackexchange.com/*"
        ],
        "js": ["src/remove.js"],
        "run_at": "document_end"
    }]
}
